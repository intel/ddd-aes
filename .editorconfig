# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Set default charset and indentation rules
charset = utf-8
indent_style = space
indent_size = 4

# Prevent trailing whitespace errors
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
